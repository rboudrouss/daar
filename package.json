{
  "name": "monorepo-root",
  "private": true,
  "scripts": {
    "cli": "pnpm --filter @monorepo/cli start",
    "build": "pnpm --filter @monorepo/lib build && pnpm --filter @monorepo/cli build && pnpm --filter @monorepo/backend build && pnpm --filter @monorepo/frontend build",
    "build:lib": "pnpm --filter @monorepo/lib build",
    "dev": "pnpm --parallel --filter \"@monorepo/*\" dev",
    "typecheck": "tsc --noEmit",
    "clean": "pnpm --recursive exec rm -rf dist tsconfig.tsbuildinfo .tsup"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "prettier": "^3.0.3"
  }
}
