# Configuration de l'application

# Port du serveur
PORT=3000

# Chemin de la base de données SQLite
DB_PATH=/app/Backend/data/library.db

# Chemin des fichiers statiques du frontend
FRONTEND_PATH=/app/frontend/dist

# Mot de passe pour les endpoints admin (optionnel)
# Utilisé pour protéger les endpoints /api/admin/*
# ADMIN_PASSWORD=your-secure-password-here

# Environnement
NODE_ENV=production

